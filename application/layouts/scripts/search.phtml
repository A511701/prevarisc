						$("#plus").click(function() {
							$.ajax({
								url: "/search/next?format=json&item=<?php echo $this->action; ?>&page=" + (page+1),
								data: data,
								success: function( result ) {

									page =  (page+1);
									$("#content_resultats").append( result["html"] );
								},
								error: function(r) {
									alert(r.responseText);
								}
							});
						
							return false;
						});
						
						var data = null;
