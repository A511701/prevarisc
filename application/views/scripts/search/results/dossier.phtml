<li>
    <!-- Icone du dossier-->
	<?php
		if($this->INCOMPLET_DOSSIER == 1)
			echo "<i class='sprite sprite-error' ></i>";
		else
			echo "<i class='sprite sprite-folder' ></i>";
	?>
    
    
    <!-- Nom du dossier -->
    <span class="doss-nom">
        <a href='/dossier/index/id/<?php echo $this->ID_DOSSIER ?>' title='<?php echo htmlspecialchars($this->LIBELLE_DOSSIERTYPE . " - " . $this->LIBELLE_DOSSIERNATURE, ENT_QUOTES) ?>'>
            <?php echo substr($this->LIBELLE_DOSSIERTYPE . " - " . $this->LIBELLE_DOSSIERNATURE, 0, 40) . ( strlen($this->LIBELLE_DOSSIERTYPE . " - " . $this->LIBELLE_DOSSIERNATURE) > 40 ? "(...)" : "" )?>
        </a>
    </span>
    
    <!-- Date du dossier -->
    <span class="doss-date">
        <?php
			$date = substr($this->DATEINSERT_DOSSIER,0,10);
			if($date != '0000-00-00'){
				$date = new DateTime(substr($this->DATEINSERT_DOSSIER,0,10));
				$date = date_format($date, 'd/m/Y');
			}else{
				$date = "00/00/0000";
			}
			echo $date . " - " . substr($this->NUMCHRONO_DOSSIER,0,26). ( strlen($this->NUMCHRONO_DOSSIER) > 26 ? ".." : "" )
		?>
    </span>
    
    <!-- Objet du dossier -->
    <span class="doss-objet" style="margin-left: 200px;" >
        <a href='/dossier/index/id/<?php echo $this->ID_DOSSIER ?>' title='<?php echo htmlspecialchars($this->OBJET_DOSSIER, ENT_QUOTES) ?>' ><?php echo substr($this->OBJET_DOSSIER, 0, 100) . ( strlen($this->OBJET_DOSSIER) > 100 ? "(...)" : "" )?></a>
    </span>
    
    <!-- Dossier affecté à quels établissements ? -->
    <span class="doss-donneur-avis">
        <?php echo $this->NOMS_ETABLISSEMENTS ?>
    </span>
        
    <!-- Avis du dossier -->
    <?php if( isset($this->ID_AVIS) ) : ?>
    <span class="avis <?php echo $this->LIBELLE_AVIS[0] ?>" title='<?php echo htmlspecialchars($this->LIBELLE_AVIS , ENT_QUOTES)?>'>
    <?php
        switch( $this->ID_AVIS ) {
            case 1: echo "?"; break;
            case 2: echo "F"; break;
            case 3: echo "D"; break;
            case 4: echo "›";break;
        }
    ?>
    </span>
    <?php endif; ?>
</li>